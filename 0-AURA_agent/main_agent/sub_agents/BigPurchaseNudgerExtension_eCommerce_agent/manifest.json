{
  "manifest_version": 3,
  "name": "Big Purchase Nudger",
  "version": "1.0",
  "description": "Helps you get nudged before a big online purchase.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*.amazon.in/*",
    "*://*.flipkart.com/*",
    "*://*.myntra.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
      {
        "matches": [ "*://*.amazon.in/*" ],
        "js": [ "content.js" ],
        "css": [ "content.css" ]
      }
    ]
  }